<h1 class="offset-lg-5">Eat The Burger!</h1>

<container class="row">
  <div class="offset-lg-2 col-lg-4">
    <h2>Uneaten Burger List</h2>
    <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <div>
            <form>
              <button type="submit" class="uneatenBurger" data-id="{{this.id}}" data-newDevoured="{{devour}}"> {{this.burger_name}}</button>
             </form>
          </div>
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="offset-lg-2 col-lg-4">
    <h2>Eaten Burgers</h2>
    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
        <div class="eatenBurger">
              <h3>
                {{this.burger_name}}
              </h3>
            </div>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</container>


<div class="row">
  <h2 class="offset-lg-5 col-lg-7">Add a New Burger!</h2>
  <div class="offset-lg-5">
    <form>
      <div class="form-group">
        <label for="burgerBox">Enter Your Burgers Here</label>
        <input type="text" class="form-control" id="enterBurger" name="burgerBox" placeholder="Enter Burger">
      </div>
      <button type="submit" id="submit"class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>

<div>
  <img src="/assets/images/burger.png" height="300px" width="auto">
</div>
